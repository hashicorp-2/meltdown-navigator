{
  "name": "@meltdown/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "concurrently \"tsc -p tsconfig.build.json --watch\" \"nodemon --watch dist dist/index.js\"",
    "dev:simple": "node --loader ts-node/esm --no-warnings src/index.ts",
    "start": "npm run build && node dist/index.js",
    "start:prod": "node dist/index.js",
    "test": "jest",
    "lint": "eslint .",
    "migrate": "node --loader ts-node/esm src/scripts/migrate.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.43",
    "ai": "^3.4.33",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.7.0",
    "twilio": "^5.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
