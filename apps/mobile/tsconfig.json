{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@store/*": ["src/store/*"],
      "@theme/*": ["theme/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["nativewind/types"]
  },
  "include": ["App.tsx", "index.ts", "src", "nativewind.d.ts"]
}
