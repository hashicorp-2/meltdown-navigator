{
  "name": "meltdown-navigator",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend",
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @meltdown/web",
    "build:web": "npm run build --workspace @meltdown/web",
    "lint:web": "npm run lint --workspace @meltdown/web",
    "dev:mobile": "npm run start --workspace @meltdown/mobile",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules frontend/node_modules backend/node_modules"
  },
  "devDependencies": {
    "rimraf": "5.0.5"
  }
}
